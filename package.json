{
    "scripts": {
        "dfx_install": "DFX_VERSION=0.14.2 sh -ci \"$(curl -fsSL https://sdk.dfinity.org/install.sh)\"",
        "replica_start": "dfx start --background --clean",
        "replica_stop": "dfx stop",
        "canister_deploy_local": "dfx deploy PTFG",
        "canister_deploy_mainnet": "dfx deploy --network ic PTFG",
        "canister_uninstall": "dfx canister uninstall-code PTFG",
        "canister_call_get_message": "dfx canister call PTFG getMessage",
        "canister_call_set_message": "dfx canister call PTFG setMessage '(\"Hello world!\")'"
    },
    "dependencies": {
        "@dfinity/agent": "^0.19.3",
        "azle": "0.17.1"
    }
}
